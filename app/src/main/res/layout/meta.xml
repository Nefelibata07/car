<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-191dp"
        tools:layout_editor_absoluteY="-81dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/titletext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="机器人app"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:typeface="monospace" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:orientation="vertical">

                <Button
                    android:id="@+id/music_btn"
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:background="@color/btn_color_disselect"
                    android:gravity="center"
                    android:text="蜂鸣与音乐"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:typeface="monospace" />

                <Button
                    android:id="@+id/fan_btn"
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/btn_color_disselect"
                    android:gravity="center"
                    android:text="风扇控制"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:typeface="monospace" />

                <Button
                    android:id="@+id/trace_btn"
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/btn_color_disselect"
                    android:gravity="center"
                    android:text="避障与循迹"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:typeface="monospace" />

                <RelativeLayout
                    android:layout_width="300sp"
                    android:layout_height="50sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <Button
                        android:id="@+id/checkout_btn"
                        android:layout_width="120sp"
                        android:layout_height="50sp"
                        android:layout_centerVertical="true"
                        android:background="@color/btn_color_disselect"
                        android:gravity="center"
                        android:text="颜色识别"
                        android:layout_marginRight="60sp"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:typeface="monospace" />
                    <Button
                        android:id="@+id/wifi_btn"
                        android:layout_width="120sp"
                        android:layout_height="50sp"
                        android:layout_centerVertical="true"
                        android:background="@color/btn_color_disselect"
                        android:gravity="center"
                        android:layout_toRightOf="@id/checkout_btn"
                        android:text="WiFi应用"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:typeface="monospace" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center">
            <Button
                android:id="@+id/backSelect_btn"
                android:layout_width="300sp"
                android:layout_height="50sp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:background="@color/btn_color_disselect"
                android:gravity="center"
                android:text="返回蓝牙搜索界面"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:typeface="monospace" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>